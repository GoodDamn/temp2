<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ALApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Appli"
        tools:targetApi="31">

        <activity android:name=".activities.ALActivityEntry"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.ALActivityMain"/>

        <activity android:name=".activities.auth.ALActivitySignIn"/>
        <activity android:name=".activities.auth.ALActivityLogin"/>

        <activity android:name=".activities.events.ALActivityEvent"/>

        <activity android:name=".activities.univers.ALActivityUniversity"/>

    </application>

</manifest>